---
import lightLogoSVG from "../assets/logo-light.svg?raw";
import darkLogoSVG from "../assets/logo-dark.svg?raw";
import type { Props } from "@astrojs/starlight/props";
const { siteTitle, siteTitleHref } = Astro.props as Props;
---

<a href={siteTitleHref} class="site-title sl-flex">
    <div class="light-logo" set:html={lightLogoSVG} />
    <div class="dark-logo" set:html={darkLogoSVG} />
    <span class="sr-only">
        {siteTitle}
    </span>
</a>

<style>
    .light-logo {
        display: flex;
        align-items: center;
    }

    .dark-logo {
        display: none;
    }

    @media (prefers-color-scheme: dark) {
        .light-logo {
            display: none;
        }

        .dark-logo {
            display: flex;
            align-items: center;
        }
    }

    .sr-only {
        position: absolute;
        width: 1px;
        height: 1px;
        padding: 0;
        margin: -1px;
        overflow: hidden;
        clip: rect(0, 0, 0, 0);
        white-space: nowrap;
        border-width: 0;
    }

    .site-title {
        align-items: center;
        gap: var(--sl-nav-gap);
        font-size: var(--sl-text-h4);
        font-weight: 600;
        color: var(--sl-color-text-accent);
        text-decoration: none;
        white-space: nowrap;
    }

    svg {
        height: calc(var(--sl-nav-height) - 2 * var(--sl-nav-pad-y));
        width: auto;
        max-width: 100%;
        object-fit: contain;
        object-position: 0 50%;
    }
</style>
